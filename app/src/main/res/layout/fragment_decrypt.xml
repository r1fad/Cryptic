<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projects.rifadlafir.cryptic.DecryptFragment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextD"
        android:layout_gravity="center"
        android:hint="Enter encrypted text"
        android:inputType="text"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/buttonD"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrypt"
        android:id="@+id/buttonD"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/buttonDR" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewD"
        android:layout_marginBottom="110dp"
        android:enabled="true"
        android:textSize="20dp"
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewD1"
        android:layout_marginBottom="23dp"
        android:textSize="20dp"
        android:singleLine="false"
        android:layout_gravity="bottom"
        android:layout_above="@+id/textViewD"
        android:layout_alignParentStart="true"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear All Fields"
        android:id="@+id/buttonDR"
        android:layout_below="@+id/buttonD"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonP"
        android:src="@drawable/abc_ic_menu_paste_mtrl_am_alpha"
        android:layout_below="@+id/editTextD"
        android:layout_above="@+id/buttonDR"
        android:layout_alignEnd="@+id/buttonDR"
        android:layout_toEndOf="@+id/buttonD" />

</RelativeLayout>
