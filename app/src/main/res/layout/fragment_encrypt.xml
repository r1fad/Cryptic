<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projects.rifadlafir.cryptic.EncryptFragment"

    >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear All Fields"
        android:id="@+id/buttonER"
        android:layout_x="181dp"
        android:layout_y="294dp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/buttonE"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewE"
        android:layout_marginBottom="110dp"
        android:enabled="true"
        android:textSize="20dp"
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_x="-1dp"
        android:layout_y="416dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextE"
        android:layout_gravity="center"
        android:layout_marginBottom="45dp"
        android:hint="Enter plain text"
        android:inputType="text"
        android:layout_x="-1dp"
        android:layout_y="192dp"
        android:layout_above="@+id/buttonE"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewE1"
        android:layout_marginBottom="23dp"
        android:textSize="20dp"
        android:layout_above="@+id/textViewE"
        android:layout_centerHorizontal="true"
        android:singleLine="false"
        android:layout_x="0dp"
        android:layout_y="359dp"
        android:layout_gravity="center"
        android:textAlignment="center" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonShareE"
        android:src="@drawable/abc_ic_menu_share_mtrl_alpha"
        android:layout_above="@+id/buttonER"
        android:layout_alignEnd="@+id/buttonER"
        android:layout_alignTop="@+id/buttonE"
        android:layout_toEndOf="@+id/buttonE" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Encrypt"
        android:id="@+id/buttonE"
        android:layout_x="56dp"
        android:layout_y="294dp"
        android:layout_gravity="left|center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/buttonER" />

</RelativeLayout>
